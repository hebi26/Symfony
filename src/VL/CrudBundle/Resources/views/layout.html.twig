<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}articles{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('bundles/vlcrud/style.css') }}" />
        <link href="https://fonts.googleapis.com/css?family=Black+Ops+One%7CNixie+One%7CBungee%7COleo+Script+Swash+Caps%7CWire+One" rel="stylesheet">
    {% endblock %}
</head>
<body>

<div class="menu">

    <div class="pagetitle img-responsive">
        <p class="uptitle"><span id="l1">W</span><span id="l2">W</span><span id="l3">B</span></p>
        <p class="soustitle"><span id="sl1">World</span><span id="sl2">Wide</span><span id="sl3">Blog</span></p>
    </div>


    <div class="mainNav">

        <div class="navprofile">
        {% if app.user %}
            <i class="profile">{{ app.user.username }}</i>
            <a class="btn btn-primary btnprofile" href="/profile"> profile </a>
            <a class="btn btn-danger btnprofile" href="{{ path('fos_user_security_logout') }}">Logout </a>
        {% else %}
            <a class="btn btn-success btnprofile" href="/register"> Register </a>
            <a class="btn btn-primary btnprofile" href="{{ path('fos_user_security_login') }}"> Login </a>
        {% endif %}
        </div>
        <div class="adminNav">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="std stdgreen" href="{{ path('vl_add') }}"> Ajouter </a>
                <a class="std stdyellow" href="{{ path('vl_list') }}"> Liste </a>
            {%  endif %}
        </div>
    </div>
</div>

{% block body %}

{% endblock %}


{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>